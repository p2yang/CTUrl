{
    "name": "cturl",
    "manifest_version": 2,
    "version": "0.1.1",
    "description": "TTLink - 获取当前页面 title + url 到剪贴板, 默认格式为 [title](url)",
    "homepage_url": "http://blog.p2yang.com",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["cturl.js"],
			"run_at": "document_start"
		}
    ],
    "background":
	{
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "contextMenus",
        "tabs"
    ]
}